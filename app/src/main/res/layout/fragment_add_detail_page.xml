<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Pages.AddDetailPage">

      <androidx.appcompat.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/toolbar_background"
          android:minHeight="?attr/actionBarSize"
          android:theme="?attr/actionBarTheme"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:navigationIcon="@drawable/baseline_arrow_back_24"
          app:title="Detaylar" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="12dp"
          android:layout_marginTop="15dp"
          android:text="Fotoğraflar"
          android:textSize="20sp"
          android:textStyle="bold" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:layout_marginTop="15dp"
          android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="120dp"

                android:layout_marginLeft="10dp"
                android:layout_weight="1"

                android:adjustViewBounds="false"
                android:background="@drawable/background_photo"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/background_fotograf_ekle3" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/background_photo"
                android:scaleType="centerCrop"
                 />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/background_photo"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/background_photo"
                android:scaleType="centerCrop" />

      </LinearLayout>

      <TextView
          android:id="@+id/txt_location"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="12dp"
          android:layout_marginTop="15dp"
          android:text="Konum"
          android:textSize="20sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/txt_location_info"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="12dp"
          android:layout_marginTop="15dp"
          android:layout_marginRight="12dp"
          android:text="Konum"
          android:textSize="20sp"
          android:textStyle="bold"
          android:background="@drawable/background_photo"
          />

      <TextView
          android:id="@+id/textView3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="12dp"
          android:layout_marginTop="15dp"
          android:text="Açıklama"

          android:textSize="20sp"
          android:textStyle="bold" />


      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="177dp"
          android:layout_margin="15dp"
          android:background="@drawable/background_photo">


            <EditText
                android:id="@+id/editTextTextMultiLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Açıklama Yaz"
                android:inputType="textMultiLine" />
      </FrameLayout>

</LinearLayout>