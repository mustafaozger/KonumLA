<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

      <data>

      </data>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          tools:context=".Pages.AddDetailPage">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toolbar_background"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/baseline_arrow_back_24"
                app:title="Detaylar" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:text="Fotoğraflar"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                  <ImageView
                      android:id="@+id/add_image1"
                      android:layout_width="90dp"
                      android:layout_height="120dp"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="1"
                      android:adjustViewBounds="false"
                      android:background="@drawable/background_photo"
                      android:cropToPadding="false"
                      android:scaleType="centerCrop"
                      app:srcCompat="@drawable/background_fotograf_ekle3" />

                  <ImageView
                      android:id="@+id/add_image2"
                      android:layout_width="90dp"
                      android:layout_height="120dp"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="1"
                      android:background="@drawable/background_photo"
                      android:scaleType="centerCrop" />

                  <ImageView
                      android:id="@+id/add_image3"
                      android:layout_width="90dp"
                      android:layout_height="120dp"
                      android:layout_marginLeft="10dp"
                      android:layout_weight="1"
                      android:background="@drawable/background_photo"
                      android:scaleType="centerCrop" />

                  <ImageView
                      android:id="@+id/add_image4"
                      android:layout_width="90dp"
                      android:layout_height="120dp"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:layout_weight="1"
                      android:background="@drawable/background_photo"
                      android:scaleType="centerCrop" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:text="Konum"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/background_photo"
                android:hint="Konum"
                android:padding="10sp"
                android:paddingLeft="12sp"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:text="Açıklama"
                android:textSize="20sp"
                android:textStyle="bold" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_margin="15dp"
                android:background="@drawable/background_photo">


                  <EditText
                      android:id="@+id/txt_detail"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:ems="10"
                      android:gravity="start|top"
                      android:hint="Açıklama Yaz"
                      android:inputType="textMultiLine" />
            </FrameLayout>

            <Button
                android:id="@+id/btn_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/brown"
                android:padding="10sp"
                android:text="Paylaş"
                android:textColor="@color/cream"

                android:textSize="20sp" />

      </LinearLayout>
</layout>