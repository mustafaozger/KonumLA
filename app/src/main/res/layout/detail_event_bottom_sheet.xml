<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:hapticFeedbackEnabled="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:srcCompat="@drawable/baseline_horizontal_rule_24" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/toolbar_background">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="@color/project_dark_blue"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />

                <ImageButton
                    android:id="@+id/btn_message_room"
                    android:layout_width="75dp"
                    android:layout_height="57dp"
                    android:layout_marginEnd="15dp"
                    android:backgroundTint="@color/white"
                    android:contentDescription="Sohbet Odası"
                    android:scaleType="centerCrop"
                    android:src="@drawable/message_icon"
                    app:layout_constraintEnd_toStartOf="@+id/btn_save_location"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btn_save_location"
                    android:layout_width="44dp"
                    android:layout_height="57dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/outline_bookmark_border_24" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                app:iss_auto_cycle="false"
                app:iss_delay="1000"
                app:iss_period="1000"
                app:iss_placeholder="@drawable/loading_placeholder"
                app:iss_text_align="CENTER" />

            <TextView
                android:id="@+id/detailBottomsheetEventType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:text="Etkinlik Türü: "
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/detailBottomsheetEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:text="Hakkında"
                android:textColor="#000000"
                android:textSize="25sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/diaolg_box_background">


                <TextView
                    android:id="@+id/detailBottomsheetEventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />
            </FrameLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/btn_direction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:text="Yol Tarifi Al"
                android:textAlignment="center"

                />


        </LinearLayout>
    </ScrollView>

</layout>