<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:layout_margin="10dp"
        android:background="@drawable/background_photo"
        android:orientation="vertical">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/img_mainpage_explore_rycler_image"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            app:iss_auto_cycle="false"
            app:iss_delay="1000"
            app:iss_period="1000"
            app:iss_placeholder="@drawable/loading_placeholder"
            app:iss_text_align="CENTER" />

        <TextView
            android:id="@+id/txt_mainpage_explore_rycler_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:text=""
            android:textColor="@color/date_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_mainpage_explore_rycler_event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="#0B0A0A"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_mainpage_explore_rycler_event_detail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"


            android:textAllCaps="false"
            app:autoSizeMaxTextSize="100sp" />

    </LinearLayout>
</layout>