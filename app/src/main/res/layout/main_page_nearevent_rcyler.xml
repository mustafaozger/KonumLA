<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rcyler_near_event_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_photo"
        android:foreground="?android:attr/selectableItemBackground">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/img_mainpage_explore_rycler_image"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_margin="10dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="13dp"
            app:circularflow_defaultRadius="20dp"
            app:iss_auto_cycle="false"
            app:iss_corner_radius="50"
            app:iss_delay="1000"
            app:iss_period="1000"
            app:iss_placeholder="@drawable/loading_placeholder"
            app:iss_text_align="CENTER"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txt_mainpage_explore_rycler_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alata"
            android:text="18/12/2012 13:03"
            android:textColor="@color/date_color"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_mainpage_explore_rycler_image" />

        <TextView
            android:id="@+id/txt_mainpage_explore_rycler_event_type"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alata"
            android:text="Toplant覺"
            android:textColor="#0B0A0A"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_mainpage_explore_rycler_date" />

        <TextView
            android:id="@+id/txt_mainpage_explore_rycler_event_name"
            android:layout_width="140dp"
            android:layout_height="30dp"


            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/alata"
            android:text="Grup toplant覺s覺"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_mainpage_explore_rycler_event_type" />

        <ImageButton
            android:id="@+id/btn_recler_message"
            android:layout_width="37dp"
            android:layout_height="35dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:contentDescription="Sohbet Odas覺"
            android:padding="3dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/txt_mainpage_explore_rycler_event_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/chat_room" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>