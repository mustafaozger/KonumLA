<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="16dp"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_allert_camera"
            android:layout_width="78dp"
            android:layout_height="75dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/camera_icon" />

        <ImageView
            android:id="@+id/img_allert_gallery"
            android:layout_width="78dp"
            android:layout_height="75dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toEndOf="@+id/img_allert_camera"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/gallery_icon" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="77dp"
            android:layout_height="22dp"
            android:layout_marginStart="52dp"
            android:layout_marginBottom="50dp"
            android:text="Kamera"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_allert_camera" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="79dp"
            android:layout_height="22dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="52dp"
            android:text="Galeri"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/img_allert_gallery" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>